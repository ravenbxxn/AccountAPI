<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebPrototype</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebPrototype.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bolder" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="nav-link text-white btn" data-bs-toggle="dropdown" aria-expanded="false">ซื้อ</a>
                                <ul class="dropdown-menu">
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="nav-link text-white btn" data-bs-toggle="dropdown" aria-expanded="false">ขาย</a>
                                <ul class="dropdown-menu">
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="nav-link text-white btn" data-bs-toggle="dropdown" aria-expanded="false">การเงิน</a>
                                <ul class="dropdown-menu">
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="nav-link text-white btn" data-bs-toggle="dropdown" aria-expanded="false">สินค้า</a>
                                <ul class="dropdown-menu">
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="nav-link text-white btn" data-bs-toggle="dropdown" aria-expanded="false">บัญชี</a>
                                <ul class="dropdown-menu">
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="nav-link text-white btn" data-bs-toggle="dropdown" aria-expanded="false">รายงาน</a>
                                <ul class="dropdown-menu">
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="nav-link text-white btn" data-bs-toggle="dropdown" aria-expanded="false">เริ่มระบบ</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Profile" asp-action="Index">- รายระเอียดกิจการ</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="nav-link text-white btn" data-bs-toggle="dropdown" aria-expanded="false">อื่น ๆ</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Vender" asp-action="Index">- Vender</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Company" asp-action="Index">- Customer</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Index">- Account</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="SrvGroup" asp-action="Index">- SrvGroup</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="SrvSingle" asp-action="Index">- SrvSingle</a></li>
                                </ul>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @{
                var errorMessage = TempData["errorMessage"]?.ToString();
                var successMessage = TempData["successMessage"]?.ToString();
            }
            @if (!string.IsNullOrWhiteSpace(successMessage))
            {
                <div class="alert alert-success">
                    <b>Success : </b>@successMessage
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            else if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger">
                    <b>Success : </b>@errorMessage
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2567 - WebPrototype - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
